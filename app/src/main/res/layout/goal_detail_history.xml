<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout_goalHistory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/goalAmount_goalHistory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="₱1,500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goalDate_goalHistory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goalAmount_goalHistory1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Jul 13, 2022"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goalTime_goalHistory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@id/goalAmount_goalHistory1"
            android:text="9:00 PM"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_goalHistory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/goalAmount_goalHistory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="₱1,500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goalDate_goalHistory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goalAmount_goalHistory2"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Jul 13, 2022"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/goalTime_goalHistory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@id/goalAmount_goalHistory2"
            android:text="9:00 PM"
            android:textSize="12sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>