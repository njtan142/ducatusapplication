<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalDetail"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/goalDetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_bg"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/edit_menu"
        app:navigationIcon="@drawable/ic_back"
        app:title="Goal Detail"
        app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relativeLayout_goalDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/goalDetail_toolbar">

        <ImageView
            android:id="@+id/img_goalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/green_circle_bg"
            android:padding="10dp"
            android:src="@drawable/ic_plane" />

        <TextView
            android:id="@+id/textView_goalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img_goalDetail"
            android:text="Singapore's Universal Studio"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/targetDate_goalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_goalDetail"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/img_goalDetail"
            android:text="Target date: Jul 28, 2020"
            android:textColor="@color/light_gray_text" />

        <ProgressBar
            android:id="@+id/goalDetail_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="340dp"
            android:layout_height="260dp"
            android:layout_below="@id/img_goalDetail"
            android:layout_centerInParent="true"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle_progressbar"
            tools:progress="75" />

        <TextView
            android:id="@+id/textView_goalPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_centerInParent="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="130dp"
            android:gravity="center"
            android:textColor="@color/green_text"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:text="75%" />

        <TextView
            android:id="@+id/textView_goalEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="90dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="110dp"
            android:gravity="right"
            android:textColor="@color/gray_text"
            tools:text="Earned: " />

        <TextView
            android:id="@+id/textView_goalEarnedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="165dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="110dp"
            android:gravity="center"
            android:textColor="@color/gray_text"
            tools:text="₱150,000" />

        <TextView
            android:id="@+id/textView_goalGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="90dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="90dp"
            android:gravity="right"
            android:textColor="@color/gray_text"
            tools:text="Goal: " />

        <TextView
            android:id="@+id/textView_goalGoalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="165dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:textColor="@color/gray_text"
            tools:text="₱200,000" />

        <TextView
            android:id="@+id/textView_goalRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="80dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="70dp"
            android:gravity="right"
            android:textColor="@color/gray_text"
            tools:text="Remaining: " />

        <TextView
            android:id="@+id/textView_goalRemainingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/goalDetail_progressBar"
            android:layout_alignTop="@+id/goalDetail_progressBar"
            android:layout_alignEnd="@+id/goalDetail_progressBar"
            android:layout_alignBottom="@+id/goalDetail_progressBar"
            android:layout_marginStart="165dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:textColor="@color/gray_text"
            tools:text="₱50,000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_goalDetail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/text_input"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_goalDetail"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/textView_totalSavedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="Total Saved Amount"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_savedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="₱150,000"
            android:letterSpacing="0.05"
            android:textSize="16sp"
            android:textColor="@color/gray_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/savedAmountHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Saved Amount History"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_goalDetail1" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savedAmountHistory"
        tools:layout_editor_absoluteY="522dp">

        <ListView
            android:id="@+id/savedAmountHistoryListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            tools:listitem="@layout/goal_detail_history" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/linestroke_gray"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout_goalHistory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_line">

        <Button
            android:id="@+id/btn_savedGoalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:padding="16dp"
            android:background="@drawable/btn_green_bg"
            android:text="ADD SAVED AMOUNT"
            android:textColor="@color/white"
            android:clickable="true"/>

        <Button
            android:id="@+id/btn_setGoalReached"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/curved_bg"
            android:text="SET GOAL AS REACHED"
            android:textColor="@color/black"
            android:clickable="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>