                    android:id="@+id/warning_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBar_goalActive3"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_warning" />

                <TextView
                    android:id="@+id/textView_goalWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBar_goalActive3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/warning_goal"
                    android:text="You have reached or passed your target goal" />
            </RelativeLayout>
