                    android:id="@+id/progressBar_goalActive3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/earnedAmount_goalActive3"
